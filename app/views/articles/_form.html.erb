<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="control-label col-sm-2">
          <b>
            <%= f.label :title %>
          </b>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-sm-2">
          <b>
            <%= f.label :description %>
          </b>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 offset-sm-4">
      [ <%= link_to "Cancel request and return to article listings", articles_path %> ]
    </div>
  </div>
</div>
